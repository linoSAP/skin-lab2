<%- include('partials/header', { 
    title: currentCategory ? `Produits ${currentCategory.name} - Skin Girl Lab` : 'Tous nos produits - Skin Girl Lab',
    currentPage: 'products',
    icon: '/images/ico.png' 
}) %>

<main class="products-main">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <section class="products-hero">
        <div class="container">
            <div class="hero-content">
                <!-- Titre dynamique -->
                <h1 class="hero-title">
                    <% if (currentCategory) { %>
                        Soins <span class="highlight"><%= currentCategory.name.toLowerCase() %></span>
                    <% } else { %>
                        Notre <span class="highlight">sélection</span> de soins
                    <% } %>
                </h1>
                
                <p class="hero-subtitle">Dermatologiquement testés • Formulés avec soin • Résultats visibles</p>
            </div>
        </div>
    </section>

    <section class="products-section">
        <div class="container">
            <!-- Barre de recherche et filtres -->
            <div class="products-controls">
                <div class="search-wrapper">
                    <form action="/products/search" method="GET" class="search-form">
                        <input type="text" name="q" placeholder="Rechercher un produit..." value="<%= searchQuery || '' %>">
                        <button type="submit" aria-label="Rechercher">
                            
                        </button>
                    </form>
                </div>
                
                <div class="category-filters-container">
                    <h3 class="filter-title">Filtrer par catégorie :</h3>
                    <div class="category-filters">
                        <a href="/products" class="category-filter <%= !currentCategory ? 'active' : '' %>" data-filter="all">
                            Tous
                        </a>
                        <% categories.forEach(category => { %>
                            <a href="#" 
                               class="category-filter <%= currentCategory && currentCategory.id === category.id ? 'active' : '' %>"
                               data-filter="<%= category.id %>">
                                <%= category.name %>
                            </a>
                        <% }); %>
                    </div>
                </div>
            </div>
            
            <!-- Liste des produits -->
            <% if (products.length > 0) { %>
                <div class="products-grid" id="products-grid">
                    <% products.forEach(product => { %>
                        <article class="product-card">
                            <div class="product-image-container">
                                <img src="<%= product.image %>" alt="<%= product.name %>" loading="lazy">
                                <div class="product-category-tag"><%= product.category_name %></div>
                            </div>
                            <div class="product-info">
                                <h3 class="product-name"><%= product.name %></h3>
                                <p class="product-description"><%= product.description %></p>
                                <div class="product-footer">
                                    <p class="product-price"><%= product.price.toLocaleString('fr-FR') %> XAF</p>
                                    <button class="btn add-to-cart" 
                                    data-id="<%= product.id %>" 
                                    data-name="<%= product.name %>"
                                    data-price="<%= product.price %>"
                                    data-image="<%= product.image %>">
                                <i class="fas fa-shopping-cart"></i> Ajouter
                            </button>
                                </div>
                            </div>
                        </article>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="no-results">
                    <div class="no-results-icon">
                        <i class="fas fa-search"></i>
                    </div>
                    <h3>Aucun produit trouvé</h3>
                    <p>Essayez d'autres termes de recherche ou parcourez notre catalogue</p>
                    <a href="/products" class="btn btn-primary">Voir tous les produits</a>
                </div>
            <% } %>
        </div>
    </section>
</main>

<%- include('partials/footer') %>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const filterLinks = document.querySelectorAll('.category-filter');
        const productsGrid = document.getElementById('products-grid');
        const heroTitle = document.querySelector('.hero-title');
        const heroSubtitle = document.querySelector('.hero-subtitle');
        
        filterLinks.forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                
                // Enlever la classe active de tous les liens
                filterLinks.forEach(l => l.classList.remove('active'));
                // Ajouter la classe active au lien cliqué
                this.classList.add('active');
                
                const categoryId = this.getAttribute('data-filter');
                
                // Animation de chargement
                productsGrid.innerHTML = '<div class="loading-spinner">Vide</div>';
                
                // Requête AJAX
                fetch(categoryId === 'all' ? '/products' : `/products/category/${categoryId}`)
                    .then(response => response.text())
                    .then(html => {
                        const parser = new DOMParser();
                        const doc = parser.parseFromString(html, 'text/html');
                        
                        // Mettre à jour le contenu
                        const newProductsGrid = doc.getElementById('products-grid');
                        const newHeroTitle = doc.querySelector('.hero-title');
                        const newHeroSubtitle = doc.querySelector('.hero-subtitle');
                        
                        if (newProductsGrid) productsGrid.innerHTML = newProductsGrid.innerHTML;
                        if (newHeroTitle) heroTitle.innerHTML = newHeroTitle.innerHTML;
                        if (newHeroSubtitle) heroSubtitle.innerHTML = newHeroSubtitle.innerHTML;
                        
                        // Mettre à jour l'URL sans recharger la page
                        const newUrl = categoryId === 'all' 
                            ? '/products' 
                            : `/products/category/${categoryId}`;
                        window.history.pushState({}, '', newUrl);
                    })
                    .catch(err => {
                        console.error('Error:', err);
                        productsGrid.innerHTML = `
                            <div class="no-results">
                                <div class="no-results-icon">
                                    <i class="fas fa-exclamation-triangle"></i>
                                </div>
                                <h3>Erreur de chargement</h3>
                                <a href="/products" class="btn btn-primary">Réessayer</a>
                            </div>
                        `;
                    });
            });
        });
    });
    </script>

<style>
/* Variables modernes */
:root {
    --primary-color: #7c3aed;
    --primary-light: #8b5cf6;
    --primary-dark: #6d28d9;
    --text-color: #1e293b;
    --text-light: #64748b;
    --light-bg: #f8fafc;
    --white: #ffffff;
    --gray: #e2e8f0;
    --dark-gray: #94a3b8;
    --radius: 12px;
    --radius-sm: 6px;
    --shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    --shadow-hover: 0 8px 25px rgba(0, 0, 0, 0.12);
    --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Styles de base */
.products-main {
    background-color: var(--light-bg);
}

.container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1.5rem;
}

/* Section Hero */
.products-hero {
    background: linear-gradient(135deg, #f3e8ff 0%, #ede9fe 100%);
    padding: 4rem 0 3rem;
    margin-bottom: 0.5rem;
    text-align: center;
}

.hero-content {
    max-width: 700px;
    margin: 0 auto;
}

.hero-title {
    font-size: 2.5rem;
    color: var(--text-color);
    margin-bottom: 1rem;
    font-weight: 800;
    line-height: 1.2;
}

.highlight {
    color: var(--primary-color);
    position: relative;
    display: inline-block;
}

.highlight::after {
    content: '';
    position: absolute;
    bottom: 5px;
    left: 0;
    width: 100%;
    height: 8px;
    background-color: rgba(124, 58, 237, 0.2);
    z-index: -1;
    border-radius: 2px;
}

.hero-subtitle {
    color: var(--text-light);
    font-size: 1.1rem;
    margin: 0 auto;
    max-width: 600px;
}

/* Contrôles produits */
.products-controls {
    margin: 1rem 0 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.search-wrapper {
    display: flex;
    justify-content: center;
}

.search-form {
    display: flex;
    max-width: 600px;
    width: 100%;
    box-shadow: var(--shadow);
    border-radius: var(--radius);
    overflow: hidden;
    transition: var(--transition);
}

.search-form:focus-within {
    box-shadow: 0 0 0 3px rgba(124, 58, 237, 0.3);
}

.loading-spinner {
    width: 50px;
    height: 50px;
    margin: 2rem auto;
    border: 5px solid #f3f3f3;
    border-top: 5px solid var(--primary-color);
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

.search-form input {
    flex: 1;
    padding: 0.9rem 1.25rem;
    border: none;
    font-size: 1rem;
    color: var(--text-color);
}

.search-form input::placeholder {
    color: var(--dark-gray);
}

.search-form button {
    padding: 0 1.5rem;
    background: var(--primary-color);
    color: var(--white);
    border: none;
    cursor: pointer;
    transition: var(--transition);
}

.search-form button:hover {
    background: var(--primary-dark);
}

/* Filtres */
.category-filters-container {
    text-align: center;
}

.filter-title {
    font-size: 0.95rem;
    color: var(--text-light);
    margin-bottom: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.category-filters {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.5rem;
}

.category-filter {
    padding: 0.5rem 1.25rem;
    background: var(--white);
    border-radius: var(--radius-sm);
    text-decoration: none;
    color: var(--text-light);
    font-size: 0.9rem;
    transition: var(--transition);
    border: 1px solid var(--gray);
    font-weight: 500;
}

.category-filter:hover {
    background: var(--primary-light);
    color: var(--white);
    border-color: var(--primary-light);
    transform: translateY(-2px);
}

.category-filter.active {
    background: var(--primary-color);
    color: var(--white);
    border-color: var(--primary-color);
    box-shadow: 0 2px 5px rgba(124, 58, 237, 0.2);
}

/* Grille de produits */
.products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
    margin: 3rem 0;
}

.product-card {
    background: var(--white);
    border-radius: var(--radius);
    overflow: hidden;
    box-shadow: var(--shadow);
    transition: var(--transition);
    display: flex;
    flex-direction: column;
}

.product-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-hover);
}

.product-image-container {
    position: relative;
    height: 220px;
    overflow: hidden;
}

.product-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
}

.product-card:hover img {
    transform: scale(1.03);
}

.product-category-tag {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background-color: rgba(255, 255, 255, 0.9);
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--primary-color);
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.product-info {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
}

.product-name {
    font-size: 1.1rem;
    color: var(--text-color);
    margin: 0 0 0.75rem;
    font-weight: 700;
    line-height: 1.3;
}

.product-description {
    color: var(--text-light);
    font-size: 0.9rem;
    margin-bottom: 1.25rem;
    line-height: 1.5;
    flex-grow: 1;
}

.product-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: auto;
}

.product-price {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--primary-color);
    margin: 0;
}

.btn {
    padding: 0.6rem 1.25rem;
    background: var(--primary-color);
    color: white;
    border: none;
    border-radius: var(--radius-sm);
    cursor: pointer;
    font-weight: 500;
    font-size: 0.9rem;
    transition: var(--transition);
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
}

.btn:hover {
    background: var(--primary-dark);
    transform: translateY(-2px);
}

.btn i {
    font-size: 0.9em;
}

/* Aucun résultat */
.no-results {
    text-align: center;
    padding: 3rem 2rem;
    background: var(--white);
    border-radius: var(--radius);
    margin: 3rem 0;
    box-shadow: var(--shadow);
}

.no-results-icon {
    font-size: 2.5rem;
    color: var(--primary-light);
    margin-bottom: 1.5rem;
}

.no-results h3 {
    font-size: 1.5rem;
    color: var(--text-color);
    margin-bottom: 0.75rem;
}

.no-results p {
    color: var(--text-light);
    margin-bottom: 1.5rem;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
}

.btn-primary {
    background: var(--primary-color);
    padding: 0.75rem 1.75rem;
    border-radius: var(--radius);
}

.btn-primary:hover {
    background: var(--primary-dark);
}

/* Responsive */
@media (max-width: 1024px) {
    .hero-title {
        font-size: 2.2rem;
    }
}

@media (max-width: 768px) {
    .products-hero {
        padding: 3rem 0 2rem;
    }
    
    .hero-title {
        font-size: 2rem;
    }
    
    .hero-subtitle {
        font-size: 1rem;
    }
    
    .products-grid {
        grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
        gap: 1.5rem;
    }
}

@media (max-width: 480px) {
    .container {
        padding: 0 1rem;
    }
    
    .hero-title {
        font-size: 1.8rem;
    }
    
    .category-filters {
        justify-content: flex-start;
        overflow-x: auto;
        padding-bottom: 0.5rem;
        -webkit-overflow-scrolling: touch;
    }
    
    .products-grid {
        grid-template-columns: 1fr;
        gap: 1.25rem;
    }
    
    .product-image-container {
        height: 180px;
    }
}
</style>