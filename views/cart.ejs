<%- include('partials/header', { title: 'Votre Panier - Skin Girl Lab', currentPage: 'cart',icon: '/images/ico.png'  }) %>

<main>
    <section class="cart-section">
        <div class="container">
            <h1>Votre panier</h1>

            <div id="cart-items">
                <% if (cartItems.length === 0) { %>
                    <p class="empty-cart-message">Votre panier est vide.</p>
                <% } else { %>
                    <% cartItems.forEach(item => { %>
                        <div class="cart-item">
                            <div class="item-image">
                                <img src="<%= item.image %>" alt="<%= item.name %>">
                            </div>
                            <div class="item-details">
                                <h3><%= item.name %></h3>
                                <p class="price">
                                    <%= item.price ? Number(item.price).toLocaleString('fr-FR') : '0' %> XAF
                                </p>
                                <div class="quantity-controls">
                                    <button class="quantity-btn minus" data-id="<%= item.id %>">-</button>
                                    <span class="quantity"><%= item.quantity %></span>
                                    <button class="quantity-btn plus" data-id="<%= item.id %>">+</button>
                                    <button class="remove-btn" data-id="<%= item.id %>">Supprimer</button>
                                </div>
                                <p class="item-total">
                                    <%= (item.price * item.quantity).toLocaleString('fr-FR') %> XAF
                                </p>
                            </div>
                        </div>
                    <% }); %>
                <% } %>
            </div>

            <% if (cartItems.length > 0) { %>
                <div class="cart-summary">
                    <h3>Résumé de la commande</h3>
                    <div class="summary-row">
                        <span>Sous-total</span>
                        <span id="subtotal"><%= total.toLocaleString('fr-FR') %> XAF</span>
                    </div>
                    <div class="summary-row">
                        <span>Livraison</span>
                        <span>Gratuite</span>
                    </div>
                    <div class="summary-row total">
                        <span>Total</span>
                        <span id="total"><%= total.toLocaleString('fr-FR') %> XAF</span>
                    </div>
                    <a href="#" class="btn" id="checkout-btn">Commander via WhatsApp</a>
                </div>
            <% } %>
        </div>
    </section>

    <script>
        document.addEventListener('click', function (e) {
            const btn = e.target.closest('.quantity-btn') || e.target.closest('.remove-btn');
            if (!btn) return;

            const productId = btn.dataset.id;
            let endpoint, body;

            if (btn.classList.contains('remove-btn')) {
                endpoint = '/cart/remove';
                body = { productId };
            } else {
                const action = btn.classList.contains('plus') ? 'increase' : 'decrease';
                endpoint = '/cart/update';
                body = { productId, action };
            }

            fetch(endpoint, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(body)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload(); // Recharge la page pour mettre à jour
                }
            })
            .catch(err => console.error('Erreur:', err));
        });

        async function sendWhatsAppOrder() {
        try {
            // Récupérer les données du panier via notre nouvelle route
            const response = await fetch('/cart/forsend');
            const cartData = await response.json();
            
            if (cartData.items.length === 0) {
                alert('Votre panier est vide !');
                return;
            }
            
            // Construire le message
            let message = "Bonjour, je souhaite passer une commande chez Skin Girl Lab:\n\n";
            
            cartData.items.forEach(item => {
                message += `- ${item.name} (x${item.quantity}) : ${item.itemTotal} XAF\n`;
            });
            
            message += `\nSous-total: ${cartData.subtotal.toFixed(2)} XAF\n`;
            message += `Total: ${cartData.subtotal.toFixed(2)} XAF\n\n`;
            message += "Merci !";
            
            const whatsappNumber = "+237695749209";
            window.open(`https://wa.me/${whatsappNumber}?text=${encodeURIComponent(message)}`, '_blank');
            
        } catch (error) {
            console.error('Erreur:', error);
            alert("Une erreur s'est produite lors de la préparation de la commande");
        }
    }

    document.getElementById('checkout-btn')?.addEventListener('click', function(e) {
        e.preventDefault();
        sendWhatsAppOrder();
    });
    </script>
</main>

<%- include('partials/footer') %>
